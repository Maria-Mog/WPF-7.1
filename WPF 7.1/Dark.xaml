<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>
    <Style x:Key="MenuStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Menu.Foreground" Value ="White"/>         

    </Style>
    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource MenuStyle}">
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource MenuStyle}">
        <Setter Property="TextBox.Padding" Value="10"/>
        <Setter Property="TextBox.TextAlignment" Value="Justify"/>
    </Style>
</ResourceDictionary>